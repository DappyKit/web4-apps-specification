{
  "type": "object",
  "properties": {
    "orderId": {
      "type": "string",
      "pattern": "^ORD-[0-9]{8}$"
    },
    "customerId": {
      "type": "string",
      "minLength": 5,
      "maxLength": 50
    },
    "orderDate": {
      "type": "string",
      "minLength": 10,
      "maxLength": 30
    },
    "status": {
      "type": "string",
      "enum": ["pending", "processing", "shipped", "delivered", "cancelled"]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "pattern": "^PRD-[0-9]{6}$"
          },
          "quantity": {
            "type": "number",
            "minimum": 1
          },
          "price": {
            "type": "number",
            "minimum": 0.01
          }
        },
        "required": ["productId", "quantity", "price"]
      },
      "minItems": 1
    },
    "shipping": {
      "type": "object",
      "properties": {
        "address": {
          "type": "object",
          "properties": {
            "street": {
              "type": "string",
              "minLength": 5,
              "maxLength": 100
            },
            "city": {
              "type": "string",
              "minLength": 2,
              "maxLength": 50
            },
            "state": {
              "type": "string",
              "minLength": 2,
              "maxLength": 50
            },
            "zipCode": {
              "type": "string",
              "minLength": 5,
              "maxLength": 10
            },
            "country": {
              "type": "string",
              "minLength": 2,
              "maxLength": 50
            }
          },
          "required": ["street", "city", "state", "zipCode", "country"]
        },
        "method": {
          "type": "string",
          "enum": ["standard", "express", "overnight"]
        },
        "cost": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["address", "method", "cost"]
    },
    "payment": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "enum": ["credit_card", "paypal", "bank_transfer", "crypto"]
        },
        "status": {
          "type": "string",
          "enum": ["pending", "completed", "failed", "refunded"]
        }
      },
      "required": ["method", "status"]
    },
    "totals": {
      "type": "object",
      "properties": {
        "subtotal": {
          "type": "number",
          "minimum": 0
        },
        "tax": {
          "type": "number",
          "minimum": 0
        },
        "shippingCost": {
          "type": "number",
          "minimum": 0
        },
        "discount": {
          "type": "number",
          "minimum": 0
        },
        "total": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["subtotal", "tax", "shippingCost", "total"]
    },
    "notes": {
      "type": "string",
      "maxLength": 500
    }
  },
  "required": ["orderId", "customerId", "orderDate", "status", "items", "shipping", "payment", "totals"]
} 