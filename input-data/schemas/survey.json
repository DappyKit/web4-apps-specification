{
  "type": "object",
  "properties": {
    "surveyId": {
      "type": "string",
      "pattern": "^SRV-[0-9]{8}$"
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 1000
    },
    "createdBy": {
      "type": "string",
      "format": "email"
    },
    "createdAt": {
      "type": "string",
      "minLength": 10,
      "maxLength": 30
    },
    "expiresAt": {
      "type": "string",
      "minLength": 10,
      "maxLength": 30
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "paused", "completed", "archived"]
    },
    "settings": {
      "type": "object",
      "properties": {
        "allowAnonymous": {
          "type": "boolean"
        },
        "requireLogin": {
          "type": "boolean"
        },
        "allowMultipleSubmissions": {
          "type": "boolean"
        },
        "showProgressBar": {
          "type": "boolean"
        },
        "randomizeQuestions": {
          "type": "boolean"
        },
        "confirmationMessage": {
          "type": "string",
          "maxLength": 500
        },
        "redirectUrl": {
          "type": "string",
          "format": "url"
        }
      },
      "required": ["allowAnonymous", "requireLogin", "allowMultipleSubmissions"]
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sectionId": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
          },
          "title": {
            "type": "string",
            "minLength": 3,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "maxLength": 500
          },
          "order": {
            "type": "number",
            "minimum": 0
          },
          "questions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "questionId": {
                  "type": "string",
                  "minLength": 3,
                  "maxLength": 50
                },
                "type": {
                  "type": "string",
                  "enum": ["text", "textarea", "multiplechoice", "checkbox", "dropdown", "rating", "date", "email", "number", "file", "boolean"]
                },
                "text": {
                  "type": "string",
                  "minLength": 5,
                  "maxLength": 500
                },
                "description": {
                  "type": "string",
                  "maxLength": 1000
                },
                "isRequired": {
                  "type": "boolean"
                },
                "order": {
                  "type": "number",
                  "minimum": 0
                },
                "validation": {
                  "type": "object",
                  "properties": {
                    "minLength": {
                      "type": "number",
                      "minimum": 0
                    },
                    "maxLength": {
                      "type": "number",
                      "minimum": 1
                    },
                    "min": {
                      "type": "number"
                    },
                    "max": {
                      "type": "number"
                    },
                    "pattern": {
                      "type": "string"
                    }
                  }
                },
                "options": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "optionId": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 50
                      },
                      "text": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 200
                      },
                      "value": {
                        "type": "string",
                        "maxLength": 50
                      }
                    },
                    "required": ["optionId", "text"]
                  }
                },
                "conditionalLogic": {
                  "type": "object",
                  "properties": {
                    "dependsOn": {
                      "type": "string",
                      "minLength": 3,
                      "maxLength": 50
                    },
                    "condition": {
                      "type": "string",
                      "enum": ["equals", "notEquals", "contains", "notContains", "greaterThan", "lessThan"]
                    },
                    "value": {
                      "type": "string",
                      "maxLength": 100
                    }
                  },
                  "required": ["dependsOn", "condition", "value"]
                }
              },
              "required": ["questionId", "type", "text", "isRequired"]
            },
            "minItems": 1
          }
        },
        "required": ["sectionId", "title", "order", "questions"]
      },
      "minItems": 1
    },
    "audience": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["public", "private", "targeted"]
        },
        "targetGroups": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
          }
        },
        "maxResponses": {
          "type": "number",
          "minimum": 1
        }
      },
      "required": ["type"]
    },
    "statistics": {
      "type": "object",
      "properties": {
        "views": {
          "type": "number",
          "minimum": 0
        },
        "starts": {
          "type": "number",
          "minimum": 0
        },
        "completions": {
          "type": "number",
          "minimum": 0
        },
        "abandonRate": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "averageCompletionTime": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 30
      }
    }
  },
  "required": ["surveyId", "title", "description", "createdBy", "createdAt", "status", "settings", "sections", "audience"]
} 