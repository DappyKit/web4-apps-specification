{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^TODO-[0-9]{4}$"
    },
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "completed", "cancelled"]
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "urgent"]
    },
    "completed": {
      "type": "boolean"
    },
    "dueDate": {
      "type": "string",
      "minLength": 10,
      "maxLength": 30
    }
  },
  "required": ["id", "title", "status", "priority", "completed"]
} 