{
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50
    },
    "lastName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50
    },
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 5,
      "maxLength": 100
    },
    "phone": {
      "type": "string",
      "pattern": "^[+]?[(]?[0-9]{1,4}[)]?[-\\s.]?[0-9]{1,4}[-\\s.]?[0-9]{1,9}$",
      "minLength": 7,
      "maxLength": 20
    },
    "isActive": {
      "type": "boolean"
    }
  },
  "required": ["firstName", "lastName", "email"]
} 